<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/play_music_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Choose a music to play!"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#34b"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop_music_button"
        android:text="Stop Music"
        android:background="#3f3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/play_music_button"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resume_music_button"
        android:text="Pause Music"
        android:background="#777"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/stop_music_button"
        />
</RelativeLayout>