<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.safiullah.kabultrashcollector.UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_margin="28dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp" android:id="@+id/usersimage" android:src="@drawable/avatar"
            android:layout_height="120dp" android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent" android:id="@+id/usersname" android:textColor="#d32" android:padding="14dp" android:hint="Username"
            android:layout_height="wrap_content" android:textSize="25dp" android:textAlignment="center" android:layout_below="@+id/usersimage" />

        <TextView
            android:layout_width="match_parent" android:id="@+id/userstatus" android:textColor="#23d" android:layout_below="@+id/usersname" android:hint="User' status"
            android:layout_marginTop="20dp" android:padding="14dp" android:textAlignment="center"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</RelativeLayout>
